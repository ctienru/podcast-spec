{
  "_source": {
    "includes": [
      "episode_id",
      "title",
      "description",
      "published_at",
      "duration_sec",
      "image_url",
      "language",
      "show.show_id",
      "show.title",
      "show.publisher",
      "show.image_url"
    ]
  },

  "query": {
    "bool": {
      "must": [
        {
          "multi_match": {
            "query": "{{query}}",
            "type": "best_fields",
            "fields": [
              "title^5",
              "description^1.5",
              "show.title^1.0",
              "show.publisher^0.5"
            ],
            "operator": "or",
            "minimum_should_match": "50%"
          }
        }
      ],

      "filter": [
        {{#languages}}
        {
          "terms": {
            "language": {{#toJson}}languages{{/toJson}}
          }
        }
        {{/languages}}
      ]
    }
  },

  {{#sort_by_date}}
  "sort": [
    {
      "published_at": {
        "order": "desc"
      }
    },
    {
      "_score": {
        "order": "desc"
      }
    }
  ],
  {{/sort_by_date}}

  {{^sort_by_date}}
  "sort": [
    {
      "_score": {
        "order": "desc"
      }
    }
  ],
  {{/sort_by_date}}

  "highlight": {
    "pre_tags": ["<em>"],
    "post_tags": ["</em>"],
    "fields": {
      "title": {
        "number_of_fragments": 1,
        "fragment_size": 150
      },
      "description": {
        "number_of_fragments": 2,
        "fragment_size": 180
      }
    }
  },

  "from": {{from}},
  "size": {{size}}
}