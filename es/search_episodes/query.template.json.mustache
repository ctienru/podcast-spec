{
  "_source": [
    "episode_id",
    "title",
    "description",
    "published_at",
    "duration_sec",
    "image_url",
    "language",
    "podcast.podcast_id",
    "podcast.title",
    "podcast.publisher",
    "podcast.image_url"
  ],
  "query": {
    "bool": {
      "must": [
        {
          "multi_match": {
            "query": "{{q}}",
            "type": "best_fields",
            "fields": [
              "title^3",
              "description^1.5",
              "podcast.title^1.0",
              "podcast.publisher^0.5"
            ],
            "operator": "and",
            "minimum_should_match": "75%"
          }
        }
      ],
      {{#language}}
      "filter": [
        {
          "terms": {
            "language": {{language}}
          }
        },
        {
          "exists": {
            "field": "image_url"
          }
        }
      ]
      {{/language}}
      {{^language}}
      "filter": [
        {
          "exists": {
            "field": "image_url"
          }
        }
      ]
      {{/language}}
    }
  },
  {{#sort_by_relevance}}
  "sort": [
    { "_score": "desc" }
  ],
  {{/sort_by_relevance}}
  {{#sort_by_date}}
  "sort": [
    { "published_at": { "order": "desc" } }
  ],
  {{/sort_by_date}}
  "highlight": {
    "pre_tags": ["<em>"],
    "post_tags": ["</em>"],
    "fields": {
      "title": {
        "number_of_fragments": 1,
        "fragment_size": 150
      },
      "description": {
        "number_of_fragments": 2,
        "fragment_size": 180
      }
    }
  },
  "from": {{from}},
  "size": {{size}}
}