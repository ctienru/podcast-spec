{
  "_source": [
    "episode_id",
    "title",
    "description",
    "published_at",
    "duration_sec",
    "image_url",
    "language",
    "show.show_id",
    "show.title",
    "show.publisher",
    "show.image_url"
  ],
  "query": {
    "bool": {
      "must": [
        {
          "multi_match": {
            "query": "machine learning",
            "type": "best_fields",
            "fields": [
              "title^3",
              "description^1.5",
              "show.title^1.0",
              "show.publisher^0.5"
            ],
            "operator": "and",
            "minimum_should_match": "75%"
          }
        }
      ],
      "filter": [
        {
          "terms": {
            "language": ["en"]
          }
        },
        {
          "exists": {
            "field": "image_url"
          }
        }
      ]
    }
  },
  "sort": [
    {
      "_score": "desc"
    }
  ],
  "highlight": {
    "pre_tags": ["<em>"],
    "post_tags": ["</em>"],
    "fields": {
      "title": {
        "number_of_fragments": 1,
        "fragment_size": 150
      },
      "description": {
        "number_of_fragments": 2,
        "fragment_size": 180
      }
    }
  },
  "from": 0,
  "size": 20
}